<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/fragment_splash">
    <fragment
            android:id="@+id/fragment_splash"
            android:name="com.genesis.randomphoto.ui.SplashFragment"
            android:label="Splash"
            tools:layout="@layout/fragment_splash">

        <action
                android:id="@+id/action_splash_to_slider"
                app:destination="@id/nav_slider"/>

    </fragment>
    <fragment
            android:id="@+id/nav_slider"
            android:name="com.genesis.randomphoto.ui.SliderFragment"
            android:label="Slider"
            tools:layout="@layout/fragment_slider"/>
    <fragment
            android:id="@+id/nav_home"
            android:name="com.genesis.randomphoto.ui.HomeFragment"
            android:label="Favorite"
            tools:layout="@layout/fragment_home" />
</navigation>